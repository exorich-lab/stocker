<div class="col-md-6 offset-md-3">
  <div class="jumbotron">

<h1>Stocking</h1>
    <div class="form-group">
<%= form_tag root_path, :method => 'POST' do %>
  <%= text_field_tag 'ticker', nil, placeholder: "
      Enter Ticket Symbol", size: 50, class: 'form-control' %>
      <br/>
  <%= submit_tag 'Lookup', class: 'btn btn-secondary btn-lg btn-block' %>
  <% end %>
    </div>
<br/>
<% if @stock %>
    <%= @stock.company_name %><br/>
    $<%= @stock.latest_price %><br/>
  <% elsif @nothing %>
  <%= @nothing %>
<% end %>

<% if @error%>
  <%= @error %>
<% end %>
    </div>
</div>